    android:layout_height="match_parent"
    android:background="@drawable/friendblock_blue"
    android:id="@+id/lihpbanlist"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="20"
         >

        <TextView
            android:id="@+id/bantv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#99B2EBF4"
            android:text="차단목록" />

    </LinearLayout>

    <ListView
        android:id="@+id/banlist"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1" >
    </ListView>

</LinearLayout>
